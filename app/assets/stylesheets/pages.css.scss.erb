.progress{
  height: 0.8rem;
}
.footer-case{
  width: 100%;
  background-color: #010512;
  .row{
    color: white;
  }
  a{
    color: white;
  }
}
.home-hero-wrap{
  background: image-url("crowd-oversight.jpg");
}
.full-image-wrap{
  background-color: #010512;
  background-repeat: no-repeat;
  background-position: right;
  overflow: hidden;
  .row{
    height: 320px;
  }
  h1, h2, p {
    color: white;
  }
  h1{
    font-size: 2em;
    font-weight: 500;
    margin-top: 2em;
    margin-bottom: .8em;
  }
  h2{
    margin-bottom: 1.1em;
    font-size: 1.5em;
  }
  p{
    margin-top: 80px;
  }
}
.highlight{
 .progress-points{
  li{
    margin: 0px;
    padding-left: .675rem;
    padding-right: .675rem;
    border-left: 1px solid lighten(#555, 30%);
   &:first-child{
    border: none;
    margin-left: 1.375rem;
   }
  }
 }
}

.link-crumbs{
  margin-bottom: 0em;
  margin-top: 1rem;
  float: right
}
.mission-row{
  h3{
    display: inline-block;
  }
}
