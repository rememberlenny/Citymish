.video.new-project{
  a{
    color: white;
  }
  padding-top: 5%;
  min-height: 300px;
  background: image-url("pair-research.jpg");
  background-size: cover;
  .cta{
    margin-bottom: 5%;
  }
  h2{
    font-weight: 500;
    color: rgb(255, 255, 255);
    font-size: 58px;
  }
  .black-link{
    h3{
      small{
        font-weight: 500;
        color: white;
        margin-top: 1em;
      }
    }
    background: rgba(0, 0, 0, 0.5);
  }
}

.row.main-container{
  margin-top: 1em;
}

.user-column{
  h2{
    display: inline-block;
  }
}
.progress{
  height: 0.8rem;
}
.footer-case{
  padding-top: 2em;
  padding-bottom: 1em;
  width: 100%;
  background-color: #005474;
  .row{
    color: white;
  }
  a{
    color: white;
  }
}
.home-hero-wrap{
  background: image-url("crowd-oversight.jpg");
}
.full-image-wrap{
  background-color: #010512;
  background-repeat: no-repeat;
  background-position: right;
  overflow: hidden;
  .row{
    height: 320px;
  }
  h1, h2, p {
    color: white;
  }
  h1{
    font-size: 2em;
    font-weight: 500;
    margin-top: 2em;
    margin-bottom: .8em;
  }
  h2{
    margin-bottom: 1.1em;
    font-size: 1.5em;
  }
  p{
    margin-top: 80px;
  }
}
.highlight{
 .progress-points{
  li{
    margin: 0px;
    padding-left: .675rem;
    padding-right: .675rem;
    border-left: 1px solid lighten(#555, 30%);
   &:first-child{
    border: none;
    margin-left: 1.375rem;
   }
  }
 }
}

.link-crumbs{
  margin-bottom: 0em;
  margin-top: 1rem;
  float: right
}
.mission-row{
  h3{
    display: inline-block;
  }
}
